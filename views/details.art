<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>新开普教育论坛-帖子详情页</title>
    <link rel="shortcut icon" type="image/x-icon" href="/images/favicon.ico" />
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/common.css">
    <link href="/css/topic/topicDetails.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <!-- 头部 -->
    <header class="container-fluid">
        <nav>
            <div class="box">
                <a href="" class="logo">
                    <img alt="LOGO" src="/images/logo.png">
                    <span>· 论坛</span>
                </a>
                <div class="nav">
                    <ul class="clearfix">
                        <li><a href="/">首页</a></li>
                        <li><a href="askList">问答</a></li>
                        <li><a href="membershipCardList">会员卡</a></li>
                    </ul>
                </div>

                <div class="head-search">
                    <form action="search" method="get">
                        <input name="keyword" value="" autocomplete="off" placeholder="搜索">
                        <!-- <input type="submit" class="sub-button"> -->
                    </form>
                </div>
                <div class="menu">
                    <ul class="clearfix">
                        <li>
                            <div class="author" id="uphoto">
                                <!-- <a href="/topicList.html"> -->
                                <!-- <img src="/images/users/14.jpg"> -->
                                <!-- </a> -->
                            </div>
                        </li>
                        <li><a href="#" id="welcome"></a></li>
                        <li><a href="/userCenter" id="user">用户中心</a></li>
                        <li><a href="/login.html" id="login">登录</a></li>
                        <li><a href="/reg.html" id="reg">注册</a></li>
                        <li><a href="#" class="exit" id="exit"></a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- 内容主体部分 -->
    <div class="container">
        <div class="row">
            <div class="col-sm-8">
                {{each topiclist as topic}}
                {{each userArr as user}}
                <div class="row">
                    <div class="col-sm-12">
                        <div class="thumbnail details">
                            <span class="btn btn-default">{{topic.moduleName}}</span>
                            <h3>{{topic.topicTitle}}</h3>
                            <p>{{topic.topicTime}}<span><img src="/images/topic/visited.png"
                                        alt="浏览量">{{topic.visitedCount}}浏览量</span></p>
                            <div class="caption">
                                {{#topic.topicContent}}
                            </div>
                            <div class="text-center">
                                <a class="btn btn-primary">收藏</a>
                                <a class="btn btn-primary">赞</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="thumbnail reply">
                            <div class="row">
                                <div class="col-sm-2 text-center">
                                    <img src={{user.userImg}} alt="用户头像" class="img-circle">
                                </div>
                                <div class="col-sm-10">
                                    <div class="row">
                                        <p>{{topic.poster}}</p>
                                        <p>{{topic.topicTime}}</p>
                                    </div>
                                </div>                                
                            </div>
                            <div class="caption">
                                {{topic.topicReply}}
                            </div>
                            <div class="tools">
                                <ul>
                                    <a href="">回复</a>|<a href="">引用</a>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
                {{/each}}
            </div>
            <div class="col-sm-4">
                <div class="row">
                    {{each userArr as user}}
                    <div class="col-sm-12 text-center">
                        <div class="thumbnail users">
                            <img src={{user.userImg}} alt="用户头像" class="img-circle">
                            <a href="">{{user.userName}}</a>
                            <div class="caption">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <p>{{user.userReply}}</p>
                                        <p>回答</p>
                                    </div>
                                    <div class="col-sm-4">
                                        <p>{{user.userFans}}</p>
                                        <p>粉丝</p>
                                    </div>
                                    <div class="col-sm-4">
                                        <p>{{user.userFocus}}</p>
                                        <p>关注</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <button class="btn btn-primary">关注</button>
                                    <button class="btn btn-default">发私信</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="thumbnail adv">
                            <p>相关话题</p>
                            <div class="caption">
                                <ul>
                                    {{each topiclist as topic}}
                                    <li><a href="">{{topic.topicTitle}}</a></li>
                                    {{/each}}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- 底部 -->
    <footer class="container-fluid">
        <p class="text-center">Powered by nodeJs... 联系我们</p>
    </footer>

    <!-- js部分 -->
    <script src="/js/jquery.min.js"></script>
    <script src="/js/comm/comm.js"></script>
    <script>
        window.onload = function () {
            if (localStorage.getItem("userTel")) {
                var userTel = document.getElementById("login");
                var userName = localStorage.getItem("userName");
                console.log(userName)
                userTel.innerHTML = "欢迎&nbsp;" + localStorage.getItem("userName");
                $("#uphoto").css("display", "block");
                $("#user").css("display", "block");
                $("#reg").css("display", "none");
                $("#exit").html("退出")
                if (localStorage.getItem("userImg")) {
                    // var imgBox = document.getElementById("img-box");
                    var uphoto = document.getElementById("uphoto");
                    // imgBox.innerHTML = "<img src=" + localStorage.getItem("userImg") + ">";
                    uphoto.innerHTML = "<img src=" + localStorage.getItem("userImg") + ">";
                }
            }

            var userName = localStorage.getItem("userName");
            console.log(userName)
            $.ajax({
                url: "/userTalk/queryAllTopic",
                method: "get",
                data: {
                    userName: localStorage.getItem("userName")
                },
                success: function (data) {
                    // console.log(localStorage.getItem("userName"))
                }
            })

        }

        $("#exit").click(function () {
            window.localStorage.clear();
            location.reload();
        })
    </script>
</body>

</html>