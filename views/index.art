<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>论坛-首页</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/common.css">
    <link href="/css/topic/index.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <!-- 头部 -->
    <header class="container-fluid">
        <nav>
            <div class="box">
                <a href="" class="logo">
                    <img alt="LOGO" src="/images/logo.png">
                    <span>· 论坛</span>
                </a>
                <div class="nav">
                    <ul class="clearfix">
                        <li><a href="/">首页</a></li>
                        <li><a href="askList">问答</a></li>
                        <li><a href="membershipCardList">会员卡</a></li>
                    </ul>
                </div>

                <div class="head-search">
                    <form action="search" method="get">
                        <input name="keyword" value="" autocomplete="off" placeholder="搜索">
                        <!-- <input type="submit" class="sub-button"> -->
                    </form>
                </div>
                <div class="menu">
                    <ul class="clearfix">
                        <li>
                            <div class="author" id="uphoto">
                                <!-- <a href="/topicList.html"> -->
                                <!-- <img src="/images/users/14.jpg"> -->
                                <!-- </a> -->
                            </div>
                        </li>
                        <li><a href="#" id="welcome"></a></li>
                        <li><a href="/userCenter" id="user">用户中心</a></li>
                        <li><a href="login.html" id="login">登录</a></li>
                        <li><a href="reg.html" id="reg">注册</a></li>
                        <li><a href="#" class="exit" id="exit"></a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <!-- 主体部分 -->
    <div class="index_bg">
    </div>
    <div class="container">
        <div class="container row">
            <div class="page-header col-sm-10">
                <h2>帖子分类</h2>
            </div>
            <div class="col-sm-2 put">
                <a href="/topic/posted" class="btn btn-primary"><span><img src="./images/index/write.png"
                            alt=""></span>发布帖子</a>
            </div>
        </div>
        <div class="row">
            {{each topicModules as module index}}
            <div class="col-sm-4 text-center">
                <div class="thumbnail">
                    <img src={{module.moduleImg}} alt="">
                    <div class="caption">
                        <h3>{{module.moduleName}}</h3>
                        <p><a href="/topic/queryAll/{{module.moduleName}}?pageNum=1&pageSize=5"
                                class="btn btn-primary">查看更多</a></p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    <!-- 底部 -->
    <footer class="container-fluid">
        <p class="text-center">Powered by nodeJs... 联系我们</p>
    </footer>
    <script src="js/jquery.min.js"></script>
    <script src="js/comm.js"></script>
    <script>
        window.onload = function () {
            if (localStorage.getItem("userTel")) {
                var userTel = document.getElementById("login");
                var userName = localStorage.getItem("userName");
                console.log(userName)
                userTel.innerHTML = "欢迎&nbsp;" + localStorage.getItem("userName");
                $("#uphoto").css("display", "block");
                $("#user").css("display", "block");
                $("#reg").css("display", "none");
                $("#exit").html("退出")
                if (localStorage.getItem("userImg")) {
                    // var imgBox = document.getElementById("img-box");
                    var uphoto = document.getElementById("uphoto");
                    // imgBox.innerHTML = "<img src=" + localStorage.getItem("userImg") + ">";
                    uphoto.innerHTML = "<img src=" + localStorage.getItem("userImg") + ">";
                }
            }

            var userName = localStorage.getItem("userName");
            console.log(userName)
            $.ajax({
                url: "/userTalk/queryAllTopic",
                method: "get",
                data: {
                    userName: localStorage.getItem("userName")
                },
                success: function (data) {
                    // console.log(localStorage.getItem("userName"))
                }
            })

        }



        $("#exit").click(function () {
            window.localStorage.clear();
            location.reload();
        })
    </script>
</body>

</html>